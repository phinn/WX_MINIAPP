/* pages/signup/signup.wxss */
page{ 
 height: 100%; 
} 
  
.container { 
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
 background-color: #fdffff;
} 

/*表单内容*/
.login-form { 
 margin-top: 20px; 
 flex: auto; 
 height:100%;
 width:90%;
} 
  
.inputView { 
 line-height: 44px;
 display: flex;
 flex-direction: row;
}

.inputView.withLine{
  border-bottom:#cccccc 1px solid;
} 

.inputText { 
 text-align: left; 
 margin-right: 22px; 
 margin-top: 11px; 
 color: #cccccc; 
 font-size: 14px;
}

.inputText.withButton {
  width:50%;
} 

/*按钮*/
.actionView { 
 display:flex;
 flex-direction: row;
 width: 100%; 
 height: auto; 
 margin-top: 0px; 
 margin-bottom: 0px; 
 padding-bottom: 0px; 
} 
  
.nextBtn { 
 width: 50%; 
 margin-top: 35px;
 background: #f6af00 !important; 
}

.sendBtn {
  width:100px;
}